<!-- INICIO TABELA DE PRODUTOS -->
<div class="page-header">
	<h1>Produtos</h1>
</div>
<% if flash[:notice] %>
	<div class="alert alert-success" role="alert">
		<%= flash[:notice] %>
	</div>
<% end %>
<table class="table table-bordered">
	<thead>
		<tr>
			<th>Nome</th>
			<th>Descrição</th>
			<th>Preço</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		<%= render partial: "produto", collection: @produtos %>
	</tbody>
</table>
<%= link_to("Criar Novo Produto", new_produto_path, class: "btn btn-default") %>
<!-- FIM TABELA DE PRODUTOS -->